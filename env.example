# Configurações do Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações do Banco de Dados PostgreSQL
DB_NAME=datamaster2
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# Configurações do Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:your-password-here@localhost:5432/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Configurações de API
YAHOO_FINANCE_API_KEY=your-api-key-here
ALPHA_VANTAGE_API_KEY=your-api-key-here

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/datamaster2/app.log

# Configurações de Segurança
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Configurações do Dashboard
DASHBOARD_PORT=8000
DASHBOARD_HOST=0.0.0.0

# Configurações de Cache
REDIS_URL=redis://localhost:6379/0

# Configurações de Email (para alertas)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password 